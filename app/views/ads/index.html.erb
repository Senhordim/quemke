<p><%= link_to 'New Ad', new_ad_path %></p>
<h1>Listing ads</h1>

<% @ads.each do |ad| %>
 
    
    <p><%= ad.title %></p>
    <p><%= image_tag ad.image.url(:thumb) %></p>

    <ul>
      <li><%= link_to 'Show', ad %></li>
      <li><%= link_to 'Edit', edit_ad_path(ad) %></li>
      <li><%= link_to 'Destroy', ad, method: :delete, data: { confirm: 'Are you sure?' } %></li>
    </ul>
  

<% end %>


